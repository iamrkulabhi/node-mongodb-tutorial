<%- include('auth-header.ejs') %>
<div class="card-header">
    <h3><%= title %></h3>
    <!-- <div class="d-flex justify-content-end social_icon">
        <span><i class="fab fa-facebook-square"></i></span>
        <span><i class="fab fa-google-plus-square"></i></span>
        <span><i class="fab fa-twitter-square"></i></span>
    </div> -->
    <% if(errorMsg) { %>
        <div class="alert alert-danger alert-dismissible">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            <strong>Error! </strong><%= errorMsg %>
        </div>
    <% } %>
</div>
<div class="card-body">
    <form method="POST" action="<%= actionUrl %>">
        <input type="hidden" name="_csrf" value="<%= csfrToken %>"/>
        <div class="input-group form-group">
            <div class="input-group-prepend">
                <span class="input-group-text"><i class="fas fa-user"></i></span>
            </div>
            <input type="text" class="form-control <%= validationErrors.find(e => e.param === 'email') ? 'is-invalid' : '' %>" value="<%= oldValues.email %>" name="email" placeholder="Email">
        </div>
        <div class="input-group form-group">
            <div class="input-group-prepend">
                <span class="input-group-text"><i class="fas fa-key"></i></span>
            </div>
            <input type="password" class="form-control <%= validationErrors.find(e => e.param === 'password') ? 'is-invalid' : '' %>" name="password" placeholder="password">
        </div>
        <div class="row align-items-center remember">
            <input type="checkbox">Remember Me
        </div>
        <div class="form-group">
            <input type="submit" value="Login" class="btn float-right login_btn">
        </div>
    </form>
</div>
<div class="card-footer">
    <div class="d-flex justify-content-center links">
        Don't have an account?<a href="/signup">Sign Up</a>
    </div>
    <div class="d-flex justify-content-center">
        <a href="/forget-password">Forgot your password?</a>
    </div>
</div>
<%- include('auth-footer.ejs') %>

